// 1) 
#include <iostream>
using namespace std;

int main() {
for(int i=1;i<=2;i++){
    cout<<"outer"<<i<<"\n";

    for(int j=1;j<=3;j++){
        cout<<"innner"<<j<<"\n";
    }
}

}  

// 2) Right-Angled Triangle Pattern Using Nested Loops.
#include <iostream>
using namespace std;
 
int main() {
    int i,j;
   
    for(i=1;i<=5;i++){
        for(j=1;j<=i;j++){
            cout<<"*";
        }
       
    cout<<"\n";
    }
 
}

// 3) Inverted Right-Angled Triangle Pattern Using Nested Loops.
#include <iostream>
using namespace std;

int main() {
    int i,j;
    int k=5;
    for(i=k;i>=1;--i){
        for(j=1;j<=i;++j){
            cout<<"*";
        }
    cout<<"\n";    
       
    }
   

}

// 4) Increasing Number Triangle Pattern Using Nested Loops.
#include <iostream>
using namespace std;

int main() {
    int rows=4, number=1;
    for(int i=1;i<=rows;i++){
        for(int j=1;j<=i;j++){
            cout<<number<<" ";
            number++;
       
        }
        cout<<endl;
    }
    return 0;
}

// 5) Sequential Alphabet Triangle Pattern Using Nested Loops.
#include <iostream>
#include<string>
using namespace std;
int main() {
    int rows=5;
    char ch='A';
 
    for(int i=1;i<=rows;i++){
        for(int j=1;j<=i;j++){
            cout<<ch<<" ";
            ch++;
       
        }
        cout<<endl;
    }
    return 0;
}

// 6) Symmetric Hourglass Pattern Using Nested Loops.
#include <iostream>
using namespace std;

int main() {
    int rows = 5;
    for(int i = rows; i >= 1; i--) {
        for(int space = 0; space < rows - i; space++) {
            cout << " ";
        }
        for(int star = 0; star < 2 * i - 1; star++) {
            cout << "*";
        }
        cout << endl;
    }

    for(int i = 2; i <= rows; i++) {
        for(int space = 0; space < rows - i; space++) {
            cout << " ";
        }
        for(int star = 0; star < 2 * i - 1; star++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}



 
